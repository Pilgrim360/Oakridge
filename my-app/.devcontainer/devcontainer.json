{
  "name": "Next.js Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "kilocode.kilo-code"
      ]
    }
  },
  "forwardPorts": [3000],
  "postCreateCommand": "npm install",
  "postAttachCommand": "npm run dev"
}
